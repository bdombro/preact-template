.checkbox {
  margin-bottom: 1rem;
  input {
    accent-color: var(--color-primary);
    margin-right: 0.8rem;
  }
  &[data-error='true'] input {
    outline: 1px solid var(--color-danger);
  }

  /* Radios share the checkbox class and have an inner div */
  > div {
    margin-bottom: 1em;
  }
}

.generic-error {
  color: red;
  color: var(--color-danger);
  margin-bottom: 0.4rem;
}

.input {
  --text-error-color: var(--color-danger);
  position: relative;
  margin-bottom: 0.8rem;

  > label {
    background: var(--color-bg);
    color: var(--color-fg);
    font-size: 0.7rem;
    left: 8px;
    padding: 1px 3px;
    position: absolute;
    top: -8px;
  }

  > input,
  > textarea {
    background: var(--color-bg);
    border: 1px solid var(--color-gray80);
    color: var(--color-fg);
    display: block;
    margin-bottom: 0.2rem;
    padding-left: 0.8rem;
    padding-top: 0.3rem;
    width: 100%;
  }

  > input {
    height: 3rem;
  }

  &[data-disabled='true'] {
    > label {
      color: var(--color-gray50);
    }
    > input,
    > textarea {
      border-color: var(--color-gray40);
    }
  }

  &[data-error='true'] {
    > label {
      color: var(--text-error-color);
    }
    > input,
    > textarea {
      border-color: var(--text-error-color);
    }
  }
}
